<% content_for :title, "Detalle de Factura ##{@factura.numero_factura}" %>

<div class="max-w-4xl mx-auto px-4 py-6">
  <div class="flex items-center mb-6">
    <%= link_to @factura, class: "text-gray-500 hover:text-gray-700 mr-4" do %>
      <svg class="w-6 h-6" style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
    <% end %>
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Detalle de Factura</h1>
      <p class="text-gray-600 mt-1">Factura #<%= @factura.numero_factura %></p>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow border overflow-hidden">
    <!-- Información del detalle -->
    <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
      <h2 class="text-lg font-medium text-gray-900">Información del Detalle</h2>
    </div>

    <div class="px-6 py-4">
      <div class="grid grid-cols-2 gap-6">
        <div>
          <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-2">Descripción</h3>
          <p class="text-sm text-gray-900"><%= @detalle_factura.descripcion %></p>
          
          <% if @detalle_factura.producto %>
            <div class="mt-3">
              <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-2">Producto</h3>
              <p class="text-sm text-gray-900"><%= @detalle_factura.producto.nombre %></p>
            </div>
          <% end %>
        </div>
        
        <div>
          <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-2">Cantidad</h3>
          <p class="text-sm text-gray-900"><%= @detalle_factura.cantidad %></p>
          
          <div class="mt-3">
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-2">Precio Unitario</h3>
            <p class="text-sm text-gray-900">$<%= number_with_delimiter(@detalle_factura.precio_unitario, delimiter: ",") %></p>
          </div>
          
          <div class="mt-3">
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-2">Subtotal</h3>
            <p class="text-lg font-bold text-gray-900">$<%= number_with_delimiter(@detalle_factura.subtotal, delimiter: ",") %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Acciones -->
    <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
      <div class="flex justify-between items-center">
        <div class="flex gap-2">
          <%= link_to @factura, class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg font-medium transition-colors" do %>
            <svg class="w-4 h-4 inline mr-2" style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Volver a Factura
          <% end %>
        </div>
        
        <% unless @factura.anulada? || @factura.pagada? %>
          <div class="flex gap-2">
            <%= link_to edit_factura_detalles_factura_path(@factura, @detalle_factura), class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" do %>
              <svg class="w-4 h-4 inline mr-2" style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Editar
            <% end %>
            
            <%= button_to factura_detalles_factura_path(@factura, @detalle_factura), method: :delete, 
                         data: { confirm: '¿Está seguro de eliminar este detalle?' },
                         class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium transition-colors border-0" do %>
              <svg class="w-4 h-4 inline mr-2" style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              Eliminar
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
