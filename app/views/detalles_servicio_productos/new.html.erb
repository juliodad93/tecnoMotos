<% content_for :title, "Registrar Productos Utilizados" %>

<style>
  svg[width="16"] { width: 16px !important; height: 16px !important; max-width: 16px !important; max-height: 16px !important; }
  svg[width="20"] { width: 20px !important; height: 20px !important; max-width: 20px !important; max-height: 20px !important; }
  svg[width="24"] { width: 24px !important; height: 24px !important; max-width: 24px !important; max-height: 24px !important; }
  svg { flex-shrink: 0 !important; }
</style>

<div class="max-w-4xl mx-auto px-4 py-6">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Productos Utilizados en el Servicio</h1>
    <p class="text-gray-600 mt-1">Registra los productos consumidos durante la ejecución del servicio</p>
  </div>

  <!-- Información del servicio -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
    <div class="flex items-center">
      <svg width="20" height="20" style="width: 20px; height: 20px;" class="text-blue-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
      </svg>
      <div>
        <h3 class="text-lg font-semibold text-blue-900">
          <%= @detalle_servicio_vehiculo.servicio.nombre %>
        </h3>
        <p class="text-blue-700">
          Vehículo: <%= @detalle_servicio_vehiculo.vehiculo.matricula %> - 
          <%= @detalle_servicio_vehiculo.vehiculo.marca %> <%= @detalle_servicio_vehiculo.vehiculo.modelo %>
        </p>
        <p class="text-sm text-blue-600">
          Cliente: <%= @detalle_servicio_vehiculo.vehiculo.cliente.nombre %> <%= @detalle_servicio_vehiculo.vehiculo.cliente.apellido %>
        </p>
      </div>
    </div>
  </div>

  <!-- Productos ya registrados -->
  <% if @detalle_servicio_vehiculo.servicio.detalles_servicio_productos.any? %>
    <div class="bg-white shadow rounded-lg mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Productos Registrados</h2>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Producto</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cantidad</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Precio Unit.</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @detalle_servicio_vehiculo.servicio.detalles_servicio_productos.each do |detalle| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= detalle.producto.nombre %></div>
                  <div class="text-sm text-gray-500">SKU: <%= detalle.producto.sku %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= detalle.cantidad_usada %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= number_to_currency(detalle.precio_unitario) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= number_to_currency(detalle.cantidad_usada * detalle.precio_unitario) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <%= link_to "Eliminar", detalles_servicio_vehiculo_detalle_servicio_producto_path(@detalle_servicio_vehiculo, detalle), 
                      method: :delete,
                      data: { confirm: "¿Estás seguro de eliminar este producto?" },
                      class: "text-red-600 hover:text-red-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot class="bg-gray-50">
            <tr>
              <td colspan="3" class="px-6 py-3 text-right font-medium text-gray-900">Total Productos:</td>
              <td class="px-6 py-3 font-bold text-gray-900">
                <%= number_to_currency(@detalle_servicio_vehiculo.servicio.detalles_servicio_productos.sum { |d| d.cantidad_usada * d.precio_unitario }) %>
              </td>
              <td></td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  <% end %>

  <!-- Formulario para agregar nuevo producto -->
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Agregar Producto</h2>
    
    <%= form_with model: [@detalle_servicio_vehiculo, @detalle_servicio_producto], 
                  local: true, 
                  class: "space-y-4" do |form| %>
      <% if @detalle_servicio_producto.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg width="20" height="20" style="width: 20px; height: 20px;" class="text-red-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Se encontraron errores:</h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc list-inside space-y-1">
                  <% @detalle_servicio_producto.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- Selección de producto -->
        <div>
          <%= form.label :producto_id, "Producto", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :producto_id, 
              options_from_collection_for_select(@productos, :id, ->(p) { "#{p.nombre} (Stock: #{p.cantidad_disponible}) - #{number_to_currency(p.precio_venta)}" }),
              { prompt: "Selecciona un producto" },
              { 
                class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                required: true,
                onchange: "actualizarPrecio(this)"
              } %>
        </div>

        <!-- Cantidad -->
        <div>
          <%= form.label :cantidad_usada, "Cantidad Utilizada", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.number_field :cantidad_usada, 
              min: 1,
              placeholder: "Ej: 2",
              class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              required: true %>
        </div>

        <!-- Precio unitario -->
        <div>
          <%= form.label :precio_unitario, "Precio Unitario", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.number_field :precio_unitario, 
              step: 0.01,
              min: 0.01,
              placeholder: "Ej: 15000.00",
              class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              required: true %>
          <p class="mt-1 text-sm text-gray-500">Se llenará automáticamente con el precio del producto</p>
        </div>
      </div>

      <div class="flex justify-end">
        <%= form.submit "Agregar Producto", 
            class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-md transition" %>
      </div>
    <% end %>
  </div>

  <!-- Botones de acción -->
  <div class="flex justify-between items-center">
    <div>
      <%= link_to "Volver al Servicio", detalles_servicio_vehiculo_path(@detalle_servicio_vehiculo), 
          class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
    </div>
    <div class="space-x-3">
      <% if @detalle_servicio_vehiculo.servicio.detalles_servicio_productos.any? %>
        <%= link_to finalizar_servicio_detalles_servicio_vehiculo_detalles_servicio_productos_path(@detalle_servicio_vehiculo), 
            method: :post,
            data: { confirm: "¿Estás seguro de cerrar este servicio? Una vez cerrado no podrás modificar los productos." },
            class: "inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium rounded-md transition" do %>
          <svg width="16" height="16" style="width: 16px; height: 16px;" class="mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Finalizar y Cerrar Servicio
        <% end %>
      <% else %>
        <span class="text-sm text-gray-500">Agrega al menos un producto para poder cerrar el servicio</span>
      <% end %>
    </div>
  </div>
</div>

<script>
function actualizarPrecio(select) {
  if (select.value) {
    const option = select.options[select.selectedIndex];
    const text = option.text;
    const precioMatch = text.match(/\$\s*([\d,]+)/);
    
    if (precioMatch) {
      const precio = precioMatch[1].replace(/,/g, '');
      document.getElementById('detalle_servicio_producto_precio_unitario').value = precio;
    }
  }
}
</script>
