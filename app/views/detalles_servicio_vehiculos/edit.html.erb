<% content_for :title, "Editar Servicio Aplicado" %>

<style>
  svg[width="16"] { width: 16px !important; height: 16px !important; max-width: 16px !important; max-height: 16px !important; }
  svg[width="20"] { width: 20px !important; height: 20px !important; max-width: 20px !important; max-height: 20px !important; }
  svg[width="48"] { width: 48px !important; height: 48px !important; max-width: 48px !important; max-height: 48px !important; }
  svg { flex-shrink: 0 !important; }
</style>

<div class="max-w-2xl mx-auto px-4 py-6">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Editar Servicio Aplicado</h1>
    <p class="text-gray-600 mt-1">Modifica los detalles del servicio ejecutado</p>
  </div>

  <%= form_with model: @detalle_servicio_vehiculo, url: detalles_servicio_vehiculo_path(@detalle_servicio_vehiculo), method: :patch, local: true, class: "space-y-6" do |form| %>
    <% if @detalle_servicio_vehiculo.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-md p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg width="20" height="20" style="width: 20px; height: 20px;" class="text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Se encontraron errores:</h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc list-inside space-y-1">
                <% @detalle_servicio_vehiculo.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="bg-white shadow rounded-lg p-6 space-y-6">
      <!-- Estado actual -->
      <div class="bg-gray-50 border border-gray-200 rounded-md p-4">
        <h3 class="font-medium text-gray-900 mb-2">Estado Actual del Servicio</h3>
        <div class="flex items-center space-x-4">
          <div>
            <span class="text-sm text-gray-500">Estado:</span>
            <% if @detalle_servicio_vehiculo.en_progreso? %>
              <span class="ml-1 inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                En Progreso
              </span>
            <% else %>
              <span class="ml-1 inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                Completado
              </span>
            <% end %>
          </div>
          <div>
            <span class="text-sm text-gray-500">Inicio:</span>
            <span class="ml-1 text-sm text-gray-900"><%= @detalle_servicio_vehiculo.fecha_inicio.strftime("%d/%m/%Y %H:%M") %></span>
          </div>
          <% if @detalle_servicio_vehiculo.fecha_fin %>
            <div>
              <span class="text-sm text-gray-500">Fin:</span>
              <span class="ml-1 text-sm text-gray-900"><%= @detalle_servicio_vehiculo.fecha_fin.strftime("%d/%m/%Y %H:%M") %></span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Selección de Servicio -->
      <div>
        <%= form.label :servicio_id, "Servicio", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :servicio_id, 
            options_from_collection_for_select(@servicios, :id, ->(s) { "#{s.nombre} - #{s.categoria} (#{number_to_currency(s.precio_base)})" }, @detalle_servicio_vehiculo.servicio_id),
            { prompt: "Selecciona un servicio" },
            { 
              class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              required: true
            } %>
        <p class="mt-1 text-sm text-gray-500">Cambia el servicio si es necesario</p>
      </div>

      <!-- Selección de Vehículo -->
      <div>
        <%= form.label :vehiculo_id, "Vehículo", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :vehiculo_id, 
            options_from_collection_for_select(@vehiculos, :id, ->(v) { "#{v.matricula} - #{v.marca} #{v.modelo} (#{v.cliente.nombre} #{v.cliente.apellido})" }, @detalle_servicio_vehiculo.vehiculo_id),
            { prompt: "Selecciona un vehículo" },
            { 
              class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              required: true
            } %>
        <p class="mt-1 text-sm text-gray-500">Cambia el vehículo si es necesario</p>
      </div>

      <!-- Descripción -->
      <div>
        <%= form.label :descripcion, "Descripción del Trabajo", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :descripcion, 
            rows: 4,
            placeholder: "Describe el trabajo específico a realizar, observaciones, o detalles adicionales...",
            class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            required: true %>
        <p class="mt-1 text-sm text-gray-500">Actualiza los detalles del trabajo realizado</p>
      </div>

      <!-- Información sobre fechas -->
      <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg width="16" height="16" style="width: 16px; height: 16px;" class="text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="ml-3 text-sm text-blue-700">
            <p class="font-medium">Información sobre fechas:</p>
            <ul class="mt-1 list-disc list-inside space-y-1">
              <li>Las fechas de inicio y fin no se pueden modificar desde este formulario</li>
              <li>Para cerrar un servicio en progreso, usa el botón "Cerrar Servicio"</li>
              <li>La fecha de inicio se asignó automáticamente al crear el servicio</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Botones de acción -->
    <div class="flex justify-end space-x-3">
      <%= link_to "Cancelar", detalles_servicio_vehiculo_path(@detalle_servicio_vehiculo), 
          class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= form.submit "Guardar Cambios", 
          class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <!-- Acciones adicionales -->
  <div class="mt-6 pt-6 border-t border-gray-200">
    <div class="flex justify-between items-center">
      <div>
        <% if @detalle_servicio_vehiculo.en_progreso? %>
          <%= link_to "🔧 Registrar Productos y Cerrar Servicio", cerrar_servicio_detalles_servicio_vehiculo_path(@detalle_servicio_vehiculo), 
              class: "inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium rounded-md transition" %>
        <% end %>
      </div>
      
      <div class="text-right">
        <%= link_to "Ver Detalle", detalles_servicio_vehiculo_path(@detalle_servicio_vehiculo), 
            class: "text-blue-600 hover:text-blue-900 font-medium" %>
      </div>
    </div>
  </div>
</div>
