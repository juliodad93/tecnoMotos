<% content_for :title, "Servicios Aplicados a Vehículos" %>

<style>
  /* Estilos para asegurar que los íconos SVG mantengan su tamaño */
  svg[width="16"] { width: 16px !important; height: 16px !important; max-width: 16px !important; max-height: 16px !important; }
  svg[width="20"] { width: 20px !important; height: 20px !important; max-width: 20px !important; max-height: 20px !important; }
  svg[width="48"] { width: 48px !important; height: 48px !important; max-width: 48px !important; max-height: 48px !important; }
  svg { flex-shrink: 0 !important; }
</style>

<div class="max-w-6xl mx-auto px-4 py-6">
  <!-- Header con estadísticas -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">
        <%= current_user.cargo == 'tecnico' ? 'Servicios Pendientes' : 'Servicios Aplicados a Vehículos' %>
      </h1>
      <p class="text-gray-600 mt-1">
        <%= current_user.cargo == 'tecnico' ? 'Completa los servicios pendientes agregando productos' : 'Gestiona los servicios ejecutados en los vehículos' %>
      </p>
    </div>
    <% unless current_user.cargo == 'tecnico' %>
      <%= link_to "Aplicar Nuevo Servicio", new_detalles_servicio_vehiculo_path,
          class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium transition" %>
    <% end %>
  </div>

  <!-- Estadísticas -->
  <div class="grid grid-cols-4 gap-4 mb-6">
    <div class="bg-white rounded-lg shadow p-4">
      <div class="flex items-center">
        <div class="p-2 bg-blue-100 rounded-lg">
          <svg width="16" height="16" style="width: 16px; height: 16px;" class="text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Total Servicios</p>
          <p class="text-2xl font-bold text-gray-900"><%= @total_servicios %></p>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="flex items-center">
        <div class="p-2 bg-gray-100 rounded-lg">
          <svg width="16" height="16" style="width: 16px; height: 16px;" class="text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">No Iniciados</p>
          <p class="text-2xl font-bold text-gray-600"><%= @servicios_no_iniciados %></p>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="flex items-center">
        <div class="p-2 bg-yellow-100 rounded-lg">
          <svg width="16" height="16" style="width: 16px; height: 16px;" class="text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">En Progreso</p>
          <p class="text-2xl font-bold text-yellow-600"><%= @servicios_en_progreso %></p>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="flex items-center">
        <div class="p-2 bg-green-100 rounded-lg">
          <svg width="16" height="16" style="width: 16px; height: 16px;" class="text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Completados</p>
          <p class="text-2xl font-bold text-green-600"><%= @servicios_completados %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Filtros con JavaScript en lugar de form_with -->
  <div class="bg-white rounded-lg shadow mb-6 p-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Filtrar por estado:</label>
        <div class="flex flex-wrap gap-2">
          <button onclick="filtrarPorEstado('todos')" id="btn-estado-todos" class="btn-estado px-3 py-1.5 rounded-md text-sm font-medium bg-blue-600 text-white">Todos</button>
          <button onclick="filtrarPorEstado('no_iniciado')" id="btn-estado-no_iniciado" class="btn-estado px-3 py-1.5 rounded-md text-sm font-medium bg-gray-200 text-gray-800 hover:bg-gray-300">No Iniciado</button>
          <button onclick="filtrarPorEstado('en_progreso')" id="btn-estado-en_progreso" class="btn-estado px-3 py-1.5 rounded-md text-sm font-medium bg-gray-200 text-gray-800 hover:bg-gray-300">En Progreso</button>
          <button onclick="filtrarPorEstado('completado')" id="btn-estado-completado" class="btn-estado px-3 py-1.5 rounded-md text-sm font-medium bg-gray-200 text-gray-800 hover:bg-gray-300">Completado</button>
        </div>
      </div>
      <div class="md:col-span-2">
        <label for="search-input" class="block text-sm font-medium text-gray-700 mb-2">Buscar por servicio, vehículo o cliente:</label>
        <input type="search" id="search-input" onkeyup="aplicarFiltros()" placeholder="Escribe para buscar..." class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>
    </div>
  </div>

  <!-- Tabla de servicios -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="overflow-x-auto">
    <% if @detalles_servicio_vehiculos.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Servicio</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vehículo</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Inicio</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Fin</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @detalles_servicio_vehiculos.each do |detalle| %>
            <tr class="hover:bg-gray-50 servicio-aplicado-row"
                data-estado="<%= detalle.no_iniciado? ? 'no_iniciado' : (detalle.en_progreso? ? 'en_progreso' : 'completado') %>"
                data-search="<%= "#{detalle.servicio.nombre} #{detalle.servicio.categoria} #{detalle.vehiculo.matricula} #{detalle.vehiculo.marca} #{detalle.cliente.nombre} #{detalle.cliente.apellido}".downcase.gsub(/\s+/, ' ') %>">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="font-medium text-gray-900"><%= detalle.servicio.nombre %></div>
                <div class="text-sm text-gray-500"><%= detalle.servicio.categoria.titleize %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="font-medium text-gray-900"><%= detalle.vehiculo.matricula %></div>
                <div class="text-sm text-gray-500"><%= detalle.vehiculo.marca %> <%= detalle.vehiculo.modelo %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= detalle.cliente.nombre %> <%= detalle.cliente.apellido %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if detalle.no_iniciado? %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                    No Iniciado
                  </span>
                <% elsif detalle.en_progreso? %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                    En Progreso
                  </span>
                <% else %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                    Completado
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <% if detalle.fecha_inicio %>
                  <%= detalle.fecha_inicio.strftime("%d/%m/%Y %H:%M") %>
                <% else %>
                  <span class="text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <% if detalle.fecha_fin %>
                  <%= detalle.fecha_fin.strftime("%d/%m/%Y %H:%M") %>
                <% else %>
                  <span class="text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <div class="flex items-center justify-end space-x-2 flex-wrap">
                  <!-- Ver -->
                  <%= link_to detalles_servicio_vehiculo_path(detalle), 
                      class: "inline-flex items-center px-3 py-1.5 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                    Ver
                  <% end %>
                  
                  <!-- Editar -->
                  <%= link_to edit_detalles_servicio_vehiculo_path(detalle),
                      class: "inline-flex items-center px-3 py-1.5 border border-blue-300 rounded-md text-sm font-medium text-blue-700 bg-blue-50 hover:bg-blue-100 transition-colors" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Editar
                  <% end %>
                  
                  <!-- Iniciar Servicio (solo si no está iniciado) -->
                  <% if detalle.no_iniciado? %>
                    <%= link_to iniciar_servicio_detalles_servicio_vehiculo_path(detalle),
                        class: "inline-flex items-center px-3 py-1.5 border border-orange-300 rounded-md text-sm font-medium text-orange-700 bg-orange-50 hover:bg-orange-100 transition-colors" do %>
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1M9 16a5 5 0 016-4.9V9a2 2 0 11-1.316-.848l.464 1.824L10.5 10.172a2 2 0 11-2.148.656l1.472-.576z"></path>
                      </svg>
                      Iniciar
                    <% end %>
                  <% end %>
                  
                  <!-- Cerrar Servicio (solo si está en progreso) -->
                  <% if detalle.en_progreso? %>
                    <%= link_to cerrar_servicio_detalles_servicio_vehiculo_path(detalle),
                        class: "inline-flex items-center px-3 py-1.5 border border-green-300 rounded-md text-sm font-medium text-green-700 bg-green-50 hover:bg-green-100 transition-colors" do %>
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      Cerrar
                    <% end %>
                  <% end %>
                  
                  <!-- Eliminar (solo si no es técnico) -->
                  <% unless current_user.cargo == 'tecnico' %>
                    <%= link_to detalles_servicio_vehiculo_path(detalle),
                        method: :delete,
                        data: { confirm: "¿Estás seguro?" },
                        class: "inline-flex items-center px-3 py-1.5 border border-red-300 rounded-md text-sm font-medium text-red-700 bg-red-50 hover:bg-red-100 transition-colors" do %>
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                      Eliminar
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
      <div id="no-results-message" class="text-center py-12" style="display: none;">
        <svg width="48" height="48" style="width: 48px; height: 48px;" class="mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No se encontraron resultados</h3>
        <p class="mt-1 text-sm text-gray-500">Intenta ajustar los filtros o el término de búsqueda.</p>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg width="48" height="48" style="width: 48px; height: 48px;" class="mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No hay servicios aplicados</h3>
        <p class="mt-1 text-sm text-gray-500">Comienza aplicando un servicio a un vehículo.</p>
        <div class="mt-6">
          <%= link_to "Aplicar Primer Servicio", new_detalles_servicio_vehiculo_path,
              class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium transition" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- CORRECCIÓN: Script de filtrado más robusto -->
<script>
  // Variable global para mantener el estado del filtro actual
  let estadoActualFiltro = 'todos';

  // Función principal que se llama para aplicar todos los filtros
  function aplicarFiltros() {
    const searchInput = document.getElementById('search-input');
    // Si el input de búsqueda no existe, no hacemos nada con él
    const searchTerm = searchInput ? searchInput.value.toLowerCase().trim() : '';
    
    const rows = document.querySelectorAll('.servicio-aplicado-row');
    const noResultsMessage = document.getElementById('no-results-message');
    let visibleCount = 0;

    rows.forEach(row => {
      // Se obtienen los datos de la fila. Se usa || '' para evitar errores si el atributo no existe.
      const estadoFila = row.dataset.estado || '';
      const searchData = row.dataset.search || '';

      // Comprobar si la fila cumple con ambos filtros
      const coincideEstado = (estadoActualFiltro === 'todos') || (estadoFila === estadoActualFiltro);
      const coincideBusqueda = searchData.includes(searchTerm);

      if (coincideEstado && coincideBusqueda) {
        row.style.display = ''; // Mostrar fila
        visibleCount++;
      } else {
        row.style.display = 'none'; // Ocultar fila
      }
    });

    // Mostrar u ocultar el mensaje de "sin resultados", verificando que el elemento exista.
    if (noResultsMessage) {
      if (visibleCount === 0) {
        noResultsMessage.style.display = '';
      } else {
        noResultsMessage.style.display = 'none';
      }
    }
  }

  // Función para manejar el clic en los botones de estado
  function filtrarPorEstado(estado) {
    estadoActualFiltro = estado; // Actualizar el estado global

    // Actualizar estilos de los botones
    const buttons = document.querySelectorAll('.btn-estado');
    buttons.forEach(button => {
      button.classList.remove('bg-blue-600', 'text-white');
      button.classList.add('bg-gray-200', 'text-gray-800', 'hover:bg-gray-300');
    });

    const activeButton = document.getElementById(`btn-estado-${estado}`);
    // Se añade una comprobación para asegurar que el botón exista antes de modificarlo
    if (activeButton) {
        activeButton.classList.add('bg-blue-600', 'text-white');
        activeButton.classList.remove('bg-gray-200', 'text-gray-800', 'hover:bg-gray-300');
    }

    // Llamar a la función principal para que aplique el filtro
    aplicarFiltros();
  }
</script>
