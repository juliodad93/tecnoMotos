<% content_for :title, "Aplicar Servicio a Veh칤culo" %>

<style>
  svg[width="16"] { width: 16px !important; height: 16px !important; max-width: 16px !important; max-height: 16px !important; }
  svg[width="20"] { width: 20px !important; height: 20px !important; max-width: 20px !important; max-height: 20px !important; }
  svg[width="48"] { width: 48px !important; height: 48px !important; max-width: 48px !important; max-height: 48px !important; }
  svg { flex-shrink: 0 !important; }
</style>

<div class="max-w-2xl mx-auto px-4 py-6">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Aplicar Servicio a Veh칤culo</h1>
    <p class="text-gray-600 mt-1">Ejecuta un servicio espec칤fico en un veh칤culo</p>
  </div>

  <%= form_with model: @detalle_servicio_vehiculo, url: detalles_servicio_vehiculos_path, local: true, class: "space-y-6" do |form| %>
    <% if @detalle_servicio_vehiculo.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-md p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg width="20" height="20" style="width: 20px; height: 20px;" class="text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Se encontraron errores:</h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc list-inside space-y-1">
                <% @detalle_servicio_vehiculo.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="bg-white shadow rounded-lg p-6 space-y-6">
      <!-- Selecci칩n de Servicio -->
      <div>
        <%= form.label :servicio_id, "Servicio a Aplicar", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :servicio_id, 
            options_from_collection_for_select(@servicios, :id, ->(s) { "#{s.cliente&.nombre} #{s.cliente&.apellido} - #{s.vehiculo&.matricula} - #{s.nombre} - #{s.categoria_humanizada} (#{number_to_currency(s.precio_base)})" }, @detalle_servicio_vehiculo.servicio_id),
            { prompt: "Selecciona un servicio" },
            { 
              class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              required: true,
              id: "servicio_select"
            } %>
        <p class="mt-1 text-sm text-gray-500">Selecciona el servicio que vas a aplicar. El veh칤culo se seleccionar치 autom치ticamente.</p>
      </div>

      <!-- Selecci칩n de Veh칤culo -->
      <div>
        <%= form.label :vehiculo_id, "Veh칤culo", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :vehiculo_id, 
            options_from_collection_for_select(@vehiculos, :id, ->(v) { "#{v.matricula} - #{v.marca} #{v.modelo} (#{v.cliente.nombre} #{v.cliente.apellido})" }, @detalle_servicio_vehiculo.vehiculo_id),
            { prompt: "Primero selecciona un servicio" },
            { 
              class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-gray-100",
              required: true,
              id: "vehiculo_select",
              disabled: true
            } %>
        <p class="mt-1 text-sm text-gray-500">El veh칤culo se seleccionar치 autom치ticamente basado en el servicio elegido</p>
        
        <div id="mensaje-servicio" class="text-center p-3 bg-blue-50 border border-blue-200 rounded-lg mt-2" style="display: <%= @detalle_servicio_vehiculo.servicio_id ? 'none' : 'block' %>">
          <p class="text-blue-700 text-sm">
            <span class="font-medium">游눠 Selecciona un servicio</span> para ver autom치ticamente su veh칤culo asociado
          </p>
        </div>
      </div>

      <!-- Descripci칩n -->
      <div>
        <%= form.label :descripcion, "Descripci칩n del Trabajo", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :descripcion, 
            rows: 4,
            placeholder: "Describe el trabajo espec칤fico a realizar, observaciones, o detalles adicionales...",
            class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            required: true %>
        <p class="mt-1 text-sm text-gray-500">Proporciona detalles espec칤ficos sobre el trabajo a realizar</p>
      </div>

      <!-- Informaci칩n adicional -->
      <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg width="16" height="16" style="width: 16px; height: 16px;" class="text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="ml-3 text-sm text-blue-700">
            <p class="font-medium">Informaci칩n importante:</p>
            <ul class="mt-1 list-disc list-inside space-y-1">
              <li>La fecha de inicio se asignar치 autom치ticamente al momento de guardar</li>
              <li>El servicio quedar치 en estado "En Progreso" hasta que se cierre manualmente</li>
              <li>Podr치s cerrar el servicio desde la lista o desde la vista de detalle</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Botones de acci칩n -->
    <div class="flex justify-end space-x-3">
      <%= link_to "Cancelar", detalles_servicio_vehiculos_path, 
          class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= form.submit "Aplicar Servicio", 
          class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const servicioSelect = document.getElementById('servicio_select');
  const vehiculoSelect = document.getElementById('vehiculo_select');
  const mensajeServicio = document.getElementById('mensaje-servicio');
  
  let vehiculoData = [
    <% @vehiculos.each do |vehiculo| %>
      {
        id: <%= vehiculo.id %>,
        matricula: '<%= j vehiculo.matricula %>',
        marca: '<%= j vehiculo.marca %>',
        modelo: '<%= j vehiculo.modelo %>',
        anio: <%= vehiculo.anio %>,
        cliente: {
          nombre: '<%= j vehiculo.cliente.nombre %>',
          apellido: '<%= j vehiculo.cliente.apellido %>'
        }
      },
    <% end %>
  ];

  function cargarVehiculoPorServicio(servicioId) {
    if (!servicioId) {
      vehiculoSelect.disabled = true;
      vehiculoSelect.classList.add('bg-gray-100');
      vehiculoSelect.innerHTML = '<option value="">Primero selecciona un servicio</option>';
      mensajeServicio.style.display = 'block';
      return;
    }

    fetch(`/detalles_servicio_vehiculos/vehiculo_por_servicio?servicio_id=${servicioId}`)
      .then(response => response.json())
      .then(data => {
        if (data.error) {
          alert(data.error);
          return;
        }
        
        vehiculoSelect.disabled = false;
        vehiculoSelect.classList.remove('bg-gray-100');
        mensajeServicio.style.display = 'none';
        
        // Limpiar opciones y agregar el veh칤culo espec칤fico
        vehiculoSelect.innerHTML = '';
        
        const option = document.createElement('option');
        option.value = data.id;
        option.textContent = `${data.matricula} - ${data.marca} ${data.modelo} (${data.cliente.nombre} ${data.cliente.apellido})`;
        option.selected = true;
        vehiculoSelect.appendChild(option);
      })
      .catch(error => {
        console.error('Error cargando veh칤culo:', error);
        alert('Error al cargar el veh칤culo del servicio');
      });
  }

  // Manejar cambio de servicio
  if (servicioSelect) {
    servicioSelect.addEventListener('change', function() {
      cargarVehiculoPorServicio(this.value);
    });
    
    // Cargar veh칤culo si ya hay un servicio seleccionado (para casos de edici칩n)
    if (servicioSelect.value) {
      cargarVehiculoPorServicio(servicioSelect.value);
    }
  }

  // Mejorar la b칰squeda en los selects
  [servicioSelect, vehiculoSelect].forEach(select => {
    if (select) {
      select.addEventListener('focus', function() {
        this.style.borderColor = '#3B82F6';
      });
      
      select.addEventListener('blur', function() {
        this.style.borderColor = '#D1D5DB';
      });
    }
  });
});
</script>
