<div class="bg-white rounded-lg shadow border p-6">
  <%= form_with model: @factura, local: true, class: "space-y-6" do |form| %>
    <% if @factura.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4">
        <div class="flex">
          <svg class="w-5 h-5 text-red-400 mr-2" style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div>
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(@factura.errors.count, "error") %> impidieron guardar la factura:
            </h3>
            <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
              <% @factura.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-2 gap-6">
      <!-- Informaci√≥n b√°sica -->
      <div class="space-y-4">
        <h3 class="text-lg font-medium text-gray-900">Informaci√≥n B√°sica</h3>
        
        <div>
          <%= form.label :numero_factura, "N√∫mero de Factura", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :numero_factura, 
                             class: "w-full border border-gray-300 rounded-lg px-3 py-2 bg-gray-50 text-gray-500",
                             placeholder: "Se genera autom√°ticamente",
                             readonly: true %>
        </div>

        <div>
          <%= form.label :fecha_factura, "Fecha de Factura", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.date_field :fecha_factura, 
                             class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= form.label :cliente_id, "Cliente", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <input type="text" 
                   id="cliente_search" 
                   placeholder="Buscar por nombre o c√©dula..." 
                   class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                   autocomplete="off"
                   value="<%= @factura.cliente ? "#{@factura.cliente.nombre} #{@factura.cliente.apellido} - #{@factura.cliente.identificacion}" : "" %>" />
            <%= form.hidden_field :cliente_id, id: "cliente_id_hidden" %>
            
            <!-- Dropdown de resultados -->
            <div id="cliente_results" class="absolute z-50 w-full bg-white border border-gray-300 rounded-lg mt-1 shadow-lg hidden max-h-60 overflow-y-auto">
              <!-- Los resultados se cargar√°n aqu√≠ -->
            </div>
          </div>
        </div>
      </div>

      <!-- Informaci√≥n de pago -->
      <div class="space-y-4">
        <h3 class="text-lg font-medium text-gray-900">Informaci√≥n de Pago</h3>
        
        <!-- Subtotal -->
        <div>
          <%= form.label :subtotal, "Subtotal", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 sm:text-sm">$</span>
            </div>
            <%= form.number_field :subtotal, step: 0.01, min: 0,
                class: "block w-full pl-7 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm",
                placeholder: "0.00",
                id: "subtotal_input" %>
          </div>
        </div>

        <!-- Impuestos -->
        <div>
          <%= form.label :impuestos, "Impuestos", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 sm:text-sm">$</span>
            </div>
            <%= form.number_field :impuestos, step: 0.01, min: 0,
                class: "block w-full pl-7 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm",
                placeholder: "0.00",
                id: "impuestos_input" %>
          </div>
        </div>

        <!-- Total -->
        <div>
          <%= form.label :total, "Total", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 sm:text-sm">$</span>
            </div>
            <%= form.number_field :total, step: 0.01, min: 0,
                class: "block w-full pl-7 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm font-bold",
                placeholder: "0.00",
                id: "total_input",
                readonly: true %>
          </div>
        </div>
      </div>
    </div>

    <!-- Grid para m√©todo de pago y estado -->
    <div class="grid grid-cols-2 gap-6">
      <!-- M√©todo de pago -->
      <div>
        <%= form.label :metodo_pago, "M√©todo de Pago", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :metodo_pago, 
            options_for_select([
              ['Efectivo', 'efectivo'],
              ['Tarjeta de Cr√©dito', 'tarjeta_credito'],
              ['Tarjeta de D√©bito', 'tarjeta_debito'],
              ['Transferencia', 'transferencia'],
              ['Cheque', 'cheque']
            ], @factura.metodo_pago),
            { prompt: "Selecciona m√©todo de pago" },
            { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" } %>
      </div>

      <!-- Estado -->
      <div>
        <%= form.label :estado, "Estado", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :estado, 
            options_for_select([
              ['Pendiente', 'pendiente'],
              ['Pagada', 'pagada'],
              ['Anulada', 'anulada']
            ], @factura.estado),
            { prompt: "Selecciona estado" },
            { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" } %>
      </div>
    </div>

    <!-- Campo observaciones removido - no existe en la base de datos -->

    <!-- Informaci√≥n adicional -->
    <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
      <h3 class="text-sm font-medium text-blue-800 mb-2">üí° Informaci√≥n Importante</h3>
      <ul class="text-sm text-blue-700 space-y-1">
        <li>‚Ä¢ El n√∫mero de factura se genera autom√°ticamente si no se especifica</li>
        <li>‚Ä¢ El total se calcula autom√°ticamente como: Subtotal + Impuestos</li>
        <li>‚Ä¢ Las facturas pagadas no se pueden eliminar</li>
        <li>‚Ä¢ Puedes agregar detalles de productos/servicios despu√©s de crear la factura</li>
      </ul>
    </div>

    <!-- Botones de acci√≥n -->
    <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
      <%= link_to "Cancelar", @factura.persisted? ? factura_path(@factura) : facturas_path, 
          class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-lg transition duration-200" %>
      <%= form.submit @factura.persisted? ? "Actualizar Factura" : "Crear Factura", 
          class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200" %>
    </div>
  <% end %>
</div>

<script>
  // Autocompletado de clientes
  document.addEventListener('DOMContentLoaded', function() {
    const clienteSearch = document.getElementById('cliente_search');
    const clienteResults = document.getElementById('cliente_results');
    const clienteIdHidden = document.getElementById('cliente_id_hidden');
    let searchTimeout;

    if (clienteSearch && clienteResults && clienteIdHidden) {
      clienteSearch.addEventListener('input', function() {
        const query = this.value.trim();
        
        // Limpiar timeout anterior
        clearTimeout(searchTimeout);
        
        if (query.length < 2) {
          clienteResults.classList.add('hidden');
          return;
        }

        // Delay para evitar muchas requests
        searchTimeout = setTimeout(() => {
          fetch(`/clientes/search?q=${encodeURIComponent(query)}`)
            .then(response => response.json())
            .then(data => {
              clienteResults.innerHTML = '';
              
              if (data.length === 0) {
                clienteResults.innerHTML = '<div class="px-3 py-2 text-gray-500 text-sm">No se encontraron clientes</div>';
              } else {
                data.forEach(cliente => {
                  const div = document.createElement('div');
                  div.className = 'px-3 py-2 hover:bg-blue-50 cursor-pointer border-b border-gray-100 last:border-b-0';
                  div.innerHTML = `
                    <div class="text-sm font-medium text-gray-900">${cliente.text}</div>
                    <div class="text-xs text-gray-500">${cliente.telefono || ''} ${cliente.correo || ''}</div>
                  `;
                  
                  div.addEventListener('click', function() {
                    clienteSearch.value = cliente.text;
                    clienteIdHidden.value = cliente.id;
                    clienteResults.classList.add('hidden');
                  });
                  
                  clienteResults.appendChild(div);
                });
              }
              
              clienteResults.classList.remove('hidden');
            })
            .catch(error => {
              console.error('Error buscando clientes:', error);
              clienteResults.innerHTML = '<div class="px-3 py-2 text-red-500 text-sm">Error al buscar clientes</div>';
              clienteResults.classList.remove('hidden');
            });
        }, 300);
      });

      // Cerrar resultados cuando se hace clic fuera
      document.addEventListener('click', function(e) {
        if (!clienteSearch.contains(e.target) && !clienteResults.contains(e.target)) {
          clienteResults.classList.add('hidden');
        }
      });

      // Limpiar cliente seleccionado si se borra el texto
      clienteSearch.addEventListener('input', function() {
        if (this.value.trim() === '') {
          clienteIdHidden.value = '';
        }
      });
    }

    // Calcular total autom√°ticamente
    const subtotalInput = document.getElementById('subtotal_input');
    const impuestosInput = document.getElementById('impuestos_input');
    const totalInput = document.getElementById('total_input');
    
    function calcularTotal() {
      const subtotal = parseFloat(subtotalInput.value) || 0;
      const impuestos = parseFloat(impuestosInput.value) || 0;
      const total = subtotal + impuestos;
      totalInput.value = total.toFixed(2);
    }
    
    if (subtotalInput && impuestosInput && totalInput) {
      subtotalInput.addEventListener('input', calcularTotal);
      impuestosInput.addEventListener('input', calcularTotal);
      
      // Calcular al cargar si ya hay valores
      calcularTotal();
    }
  });
</script>
