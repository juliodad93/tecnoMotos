<% content_for :title, "Editar Factura ##{@factura.numero_factura}" %>

<div class="max-w-4xl mx-auto px-4 py-6">
  <div class="flex items-center justify-between mb-6">
    <div class="flex items-center">
      <%= link_to @factura, class: "text-gray-500 hover:text-gray-700 mr-4" do %>
        <svg class="w-6 h-6" style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
      <% end %>
      <h1 class="text-3xl font-bold text-gray-900">Editar Factura #<%= @factura.numero_factura %></h1>
    </div>
    
    <div class="text-right">
      <% case @factura.estado %>
      <% when 'pendiente' %>
        <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full bg-yellow-100 text-yellow-800">
          Pendiente
        </span>
      <% when 'pagada' %>
        <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full bg-green-100 text-green-800">
          Pagada
        </span>
      <% when 'anulada' %>
        <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full bg-red-100 text-red-800">
          Anulada
        </span>
      <% end %>
    </div>
  </div>

  <% if @factura.anulada? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <div class="flex">
        <svg class="w-5 h-5 text-red-400 mr-2" style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <h3 class="text-sm font-medium text-red-800">
            Factura Anulada
          </h3>
          <p class="mt-1 text-sm text-red-700">
            Esta factura ha sido anulada y no puede ser modificada.
          </p>
        </div>
      </div>
    </div>
  <% elsif @factura.pagada? %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
      <div class="flex">
        <svg class="w-5 h-5 text-yellow-400 mr-2" style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <h3 class="text-sm font-medium text-yellow-800">
            Factura Pagada
          </h3>
          <p class="mt-1 text-sm text-yellow-700">
            Esta factura ya está pagada. Los cambios deben hacerse con precaución.
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <%= render 'form' %>
</div>
