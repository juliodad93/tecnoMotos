<% content_for :title, "Gestión de Facturas" %>

<div class="max-w-7xl mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Gestión de Facturas</h1>
    <div class="flex gap-2">
      <%= link_to desde_servicios_facturas_path, class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" do %>
        <svg class="w-5 h-5 inline mr-2" style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        Facturar Servicios
      <% end %>
      <%= link_to new_factura_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" do %>
        <svg class="w-5 h-5 inline mr-2" style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Nueva Factura
      <% end %>
    </div>
  </div>

  <!-- Estadísticas -->
  <div class="grid grid-cols-5 gap-4 mb-6">
    <div class="bg-white p-4 rounded-lg shadow border">
      <h3 class="text-sm font-medium text-gray-500">Total Facturas</h3>
      <p class="text-2xl font-bold text-gray-900"><%= @total_facturas %></p>
    </div>
    <div class="bg-white p-4 rounded-lg shadow border">
      <h3 class="text-sm font-medium text-gray-500">Pendientes</h3>
      <p class="text-2xl font-bold text-yellow-600"><%= @total_pendientes %></p>
    </div>
    <div class="bg-white p-4 rounded-lg shadow border">
      <h3 class="text-sm font-medium text-gray-500">Pagadas</h3>
      <p class="text-2xl font-bold text-green-600"><%= @total_pagadas %></p>
    </div>
    <div class="bg-white p-4 rounded-lg shadow border">
      <h3 class="text-sm font-medium text-gray-500">Monto Total</h3>
      <p class="text-2xl font-bold text-gray-900">$<%= number_with_delimiter(@monto_total, delimiter: ",") %></p>
    </div>
    <div class="bg-white p-4 rounded-lg shadow border">
      <h3 class="text-sm font-medium text-gray-500">Monto Pendiente</h3>
      <p class="text-2xl font-bold text-red-600">$<%= number_with_delimiter(@monto_pendiente, delimiter: ",") %></p>
    </div>
  </div>

  <!-- Filtros -->
  <div class="bg-white p-6 rounded-lg shadow border mb-6">
    <%= form_with url: facturas_path, method: :get, local: true, class: "grid grid-cols-6 gap-4 items-end" do |form| %>
      <div>
        <%= form.label :estado, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :estado, options_for_select([['Todos', '']] + @estados.map { |e| [e.humanize, e] }, params[:estado]), 
                       {}, { class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
      </div>
      
      <div>
        <%= form.label :cliente_id, "Cliente", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :cliente_id, options_for_select([['Todos', '']] + @clientes.map { |c| ["#{c.nombre} #{c.apellido}", c.id] }, params[:cliente_id]), 
                       {}, { class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
      </div>
      
      <div>
        <%= form.label :mes, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :mes, options_for_select([['Todos', '']] + @meses, params[:mes]), 
                       {}, { class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
      </div>
      
      <div>
        <%= form.label :año, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :año, options_for_select([['Todos', '']] + @años.map { |a| [a, a] }, params[:año]), 
                       {}, { class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
      </div>
      
      <div class="flex gap-2">
        <%= form.submit "Filtrar", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
        <%= link_to "Limpiar", facturas_path, class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
      </div>
    <% end %>
  </div>

  <!-- Tabla de Facturas -->
  <div class="bg-white rounded-lg shadow border overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Número
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Cliente
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Fecha
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Total
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Estado
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Método Pago
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Usuario
            </th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              Acciones
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @facturas.empty? %>
            <tr>
              <td colspan="8" class="px-6 py-12 text-center text-gray-500">
                <div class="flex flex-col items-center">
                  <svg class="w-16 h-16 text-gray-300 mb-4" style="width: 4rem; height: 4rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                  <p class="text-lg font-medium text-gray-900">No hay facturas registradas</p>
                  <p class="text-gray-500">Comienza creando tu primera factura</p>
                </div>
              </td>
            </tr>
          <% else %>
            <% @facturas.each do |factura| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    #<%= factura.numero_factura %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <%= "#{factura.cliente.nombre} #{factura.cliente.apellido}" %>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= factura.cliente.correo %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= factura.fecha_factura.strftime('%d/%m/%Y') %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  $<%= number_with_delimiter(factura.total, delimiter: ",") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% case factura.estado %>
                  <% when 'pendiente' %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                      Pendiente
                    </span>
                  <% when 'pagada' %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                      Pagada
                    </span>
                  <% when 'anulada' %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                      Anulada
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= factura.metodo_pago&.humanize %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= factura.user.nombre %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex justify-end gap-2">
                    <%= link_to factura, class: "text-blue-600 hover:text-blue-900" do %>
                      <svg class="w-4 h-4" style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                    <% end %>
                    
                    <% unless factura.anulada? || factura.pagada? %>
                      <%= link_to edit_factura_path(factura), class: "text-indigo-600 hover:text-indigo-900" do %>
                        <svg class="w-4 h-4" style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                      <% end %>
                    <% end %>
                    
                    <% if factura.pendiente? %>
                      <%= link_to marcar_como_pagada_factura_path(factura), method: :patch, 
                                 data: { confirm: '¿Marcar esta factura como pagada?' },
                                 class: "text-green-600 hover:text-green-900" do %>
                        <svg class="w-4 h-4" style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                      <% end %>
                      
                      <%= link_to anular_factura_path(factura), method: :patch, 
                                 data: { confirm: '¿Está seguro de anular esta factura?' },
                                 class: "text-red-600 hover:text-red-900" do %>
                        <svg class="w-4 h-4" style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                      <% end %>
                    <% end %>
                    
                    <% unless factura.pagada? %>
                      <%= link_to factura, method: :delete, 
                                 data: { confirm: '¿Está seguro de eliminar esta factura?' },
                                 class: "text-red-600 hover:text-red-900" do %>
                        <svg class="w-4 h-4" style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
