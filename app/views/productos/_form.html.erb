<div class="space-y-6">
  <%= form_with model: producto, local: true, class: "space-y-6" do |form| %>
    <% if producto.errors.any? %>
      <div class="rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              Hay <%= pluralize(producto.errors.count, "error") %> que impide<%= "n" if producto.errors.count != 1 %> guardar este producto:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc list-inside space-y-1">
                <% producto.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-2 gap-6">
      <!-- Información Básica -->
      <div class="space-y-4">
        <h3 class="text-lg font-medium text-gray-900">Información del Producto</h3>
        
        <div>
          <%= form.label :nombre, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :nombre, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "Nombre del producto" %>
        </div>

        <div>
          <%= form.label :sku, "SKU (Código)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :sku, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "Código único del producto" %>
          <p class="mt-1 text-sm text-gray-500">Código único para identificar el producto</p>
        </div>

        <div>
          <%= form.label :proveedor_id, "Proveedor", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :proveedor_id, 
              options_from_collection_for_select(Proveedor.order(:nombre), :id, :nombre, producto.proveedor_id),
              { prompt: "Selecciona un proveedor" },
              { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" } %>
        </div>

        <div>
          <%= form.label :descripcion, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :descripcion, rows: 3,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "Descripción detallada del producto" %>
          <p class="mt-1 text-sm text-gray-500">Opcional - Características y detalles del producto</p>
        </div>
      </div>

      <!-- Precios e Inventario -->
      <div class="space-y-4">
        <h3 class="text-lg font-medium text-gray-900">Precios e Inventario</h3>
        
        <div>
          <%= form.label :precio_unitario, "Precio de Costo", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 text-sm">$</span>
            </div>
            <%= form.number_field :precio_unitario, step: 0.01, min: 0,
                class: "w-full pl-7 pr-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: "0.00" %>
          </div>
          <p class="mt-1 text-sm text-gray-500">Precio al que compras el producto</p>
        </div>

        <div>
          <%= form.label :precio_venta, "Precio de Venta", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 text-sm">$</span>
            </div>
            <%= form.number_field :precio_venta, step: 0.01, min: 0,
                class: "w-full pl-7 pr-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: "0.00" %>
          </div>
          <p class="mt-1 text-sm text-gray-500">Precio al que vendes el producto</p>
        </div>

        <div>
          <%= form.label :cantidad_disponible, "Cantidad en Stock", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.number_field :cantidad_disponible, min: 0,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "0" %>
          <p class="mt-1 text-sm text-gray-500">Cantidad disponible en inventario</p>
        </div>

        <!-- Margen de ganancia calculado -->
        <div class="bg-gray-50 rounded-lg p-4">
          <h4 class="text-sm font-medium text-gray-900 mb-2">Margen de Ganancia</h4>
          <div id="margin-calculation" class="text-sm text-gray-600">
            Ingresa los precios para calcular el margen
          </div>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-end space-x-3 pt-6 border-t border-gray-200">
      <%= link_to "Cancelar", 
          producto.persisted? ? producto_path(producto) : productos_path,
          class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" %>
      
      <%= form.submit producto.persisted? ? "Actualizar Producto" : "Crear Producto",
          class: "px-4 py-2 bg-blue-600 border border-transparent rounded-md text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" %>
    </div>
  <% end %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const costField = document.getElementById('producto_precio_unitario');
  const saleField = document.getElementById('producto_precio_venta');
  const marginDiv = document.getElementById('margin-calculation');
  
  function calculateMargin() {
    const cost = parseFloat(costField.value) || 0;
    const sale = parseFloat(saleField.value) || 0;
    
    if (cost > 0 && sale > 0) {
      const margin = sale - cost;
      const marginPercent = ((margin / cost) * 100).toFixed(1);
      
      marginDiv.innerHTML = `
        <div class="flex justify-between">
          <span>Ganancia:</span>
          <span class="font-medium ${margin >= 0 ? 'text-green-600' : 'text-red-600'}">$${margin.toFixed(2)}</span>
        </div>
        <div class="flex justify-between mt-1">
          <span>Margen:</span>
          <span class="font-medium ${marginPercent >= 0 ? 'text-green-600' : 'text-red-600'}">${marginPercent}%</span>
        </div>
      `;
    } else {
      marginDiv.innerHTML = 'Ingresa los precios para calcular el margen';
    }
  }
  
  costField.addEventListener('input', calculateMargin);
  saleField.addEventListener('input', calculateMargin);
  
  // Calcular inicial si hay valores
  calculateMargin();
});
</script>
