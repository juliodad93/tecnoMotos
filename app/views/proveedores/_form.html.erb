<div class="space-y-6">
  <%= form_with model: proveedor, local: true, class: "space-y-6", url: (proveedor.persisted? ? proveedore_path(proveedor) : proveedores_path) do |form| %>
    <% if proveedor.errors.any? %>
      <div class="rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              Hay <%= pluralize(proveedor.errors.count, "error") %> que impide<%= "n" if proveedor.errors.count != 1 %> guardar este proveedor:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc list-inside space-y-1">
                <% proveedor.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-2 gap-6">
      <!-- Información Básica -->
      <div class="space-y-4">
        <h3 class="text-lg font-medium text-gray-900">Información Básica</h3>
        
        <div>
          <%= form.label :nombre, "Nombre de la Empresa", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :nombre, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "Nombre del proveedor" %>
        </div>

        <div>
          <%= form.label :identificacion, "RUC/Identificación", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :identificacion, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "Número de identificación o RUC" %>
        </div>

        <div>
          <%= form.label :persona_contacto, "Persona de Contacto", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :persona_contacto, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "Nombre del contacto principal" %>
          <p class="mt-1 text-sm text-gray-500">Opcional - Persona responsable del contacto comercial</p>
        </div>
      </div>

      <!-- Información de Contacto -->
      <div class="space-y-4">
        <h3 class="text-lg font-medium text-gray-900">Información de Contacto</h3>
        
        <div>
          <%= form.label :telefono, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.telephone_field :telefono, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "Número de teléfono" %>
        </div>

        <div>
          <%= form.label :correo, "Correo Electrónico", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.email_field :correo, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "correo@empresa.com" %>
        </div>

        <div>
          <%= form.label :direccion, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :direccion, rows: 3,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "Dirección completa del proveedor" %>
          <p class="mt-1 text-sm text-gray-500">Opcional - Dirección física de la empresa</p>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-end space-x-3 pt-6 border-t border-gray-200">
      <%= link_to "Cancelar", 
          proveedor.persisted? ? proveedore_path(proveedor) : proveedores_path,
          class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" %>
      
      <%= form.submit proveedor.persisted? ? "Actualizar Proveedor" : "Crear Proveedor",
          class: "px-4 py-2 bg-blue-600 border border-transparent rounded-md text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" %>
    </div>
  <% end %>
</div>
