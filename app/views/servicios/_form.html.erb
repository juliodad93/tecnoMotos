<div class="min-h-screen bg-gray-100 py-8">
  <div class="max-w-2xl mx-auto px-4">
    <!-- Breadcrumb -->
    <nav class="flex mb-4" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1">
        <li class="inline-flex items-center">
          <%= link_to servicios_path, class: "text-gray-700 hover:text-blue-600" do %>
            Servicios
          <% end %>
        </li>
        <li>
          <div class="flex items-center">
            <span class="mx-2 text-gray-400">/</span>
            <span class="text-gray-500">Formulario</span>
          </div>
        </li>
      </ol>
    </nav>

    <div class="bg-white shadow rounded-lg">
      <!-- Header -->
      <div class="px-6 py-4 border-b border-gray-200">
        <h1 class="text-2xl font-bold text-gray-900">
          游댢 <%= @servicio.persisted? ? "Editar Servicio" : "Nuevo Servicio" %>
        </h1>
      </div>

      <!-- Form -->
      <div class="px-6 py-6">
        <%= form_with model: @servicio, local: true, class: "space-y-6" do |form| %>
          <!-- Mostrar errores -->
          <% if @servicio.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-md p-4">
              <div class="flex">
                <div class="text-red-400">丘멆잺</div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    Se encontraron <%= pluralize(@servicio.errors.count, "error") %>:
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc list-inside space-y-1">
                      <% @servicio.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Selecci칩n de Cliente -->
          <div>
            <%= form.label :cliente_id, "Cliente", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :cliente_id, 
                options_from_collection_for_select(@clientes, :id, ->(c) { "#{c.nombre} #{c.apellido} - #{c.telefono}" }, @servicio.cliente_id),
                { prompt: "Selecciona un cliente" },
                { 
                  class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm",
                  required: true,
                  id: "cliente_select"
                } %>
            <p class="mt-1 text-xs text-gray-500">Cliente para quien se realizar치 el servicio</p>
          </div>

          <!-- Selecci칩n de Veh칤culo -->
          <div>
            <%= form.label :vehiculo_id, "Veh칤culo", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <select name="servicio[vehiculo_id]" id="vehiculo_select" 
                    class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" 
                    required>
              <option value="">Primero selecciona un cliente</option>
              <% @vehiculos.each do |vehiculo| %>
                <option value="<%= vehiculo.id %>" 
                        data-cliente-id="<%= vehiculo.cliente_id %>"
                        <%= 'selected' if @servicio.vehiculo_id == vehiculo.id %>>
                  <%= "#{vehiculo.matricula} - #{vehiculo.marca} #{vehiculo.modelo} (#{vehiculo.anio})" %>
                </option>
              <% end %>
            </select>
            <p class="mt-1 text-xs text-gray-500">Veh칤culo en el que se realizar치 el servicio</p>
          </div>

          <!-- Nombre del servicio -->
          <div>
            <%= form.label :nombre, "Nombre del Servicio", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :nombre, 
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm",
                placeholder: "Ej: Cambio de aceite, Afinaci칩n completa..." %>
          </div>

          <!-- Descripci칩n -->
          <div>
            <%= form.label :descripcion, "Descripci칩n", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :descripcion, rows: 4,
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm",
                placeholder: "Describe en detalle qu칠 incluye este servicio..." %>
          </div>

          <!-- Grid para precio y duraci칩n -->
          <div class="grid grid-cols-2 gap-6">
            <!-- Precio base -->
            <div>
              <%= form.label :precio_base, "Precio Base", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <span class="text-gray-500 sm:text-sm">$</span>
                </div>
                <%= form.number_field :precio_base, step: 0.01, min: 0,
                    class: "block w-full pl-7 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm",
                    placeholder: "0.00" %>
              </div>
              <p class="mt-1 text-xs text-gray-500">Precio base del servicio en pesos</p>
            </div>

            <!-- Duraci칩n estimada -->
            <div>
              <%= form.label :duracion_estimada, "Duraci칩n Estimada", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <div class="relative">
                <%= form.number_field :duracion_estimada, min: 0,
                    class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm",
                    placeholder: "60" %>
                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                  <span class="text-gray-500 sm:text-sm">min</span>
                </div>
              </div>
              <p class="mt-1 text-xs text-gray-500">Tiempo estimado en minutos</p>
            </div>
          </div>

          <!-- Categor칤a -->
          <div>
            <%= form.label :categoria, "Categor칤a", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :categoria, 
                options_for_select([
                  ['Mantenimiento Preventivo', 'mantenimiento_preventivo'],
                  ['Mantenimiento Correctivo', 'mantenimiento_correctivo'],
                  ['Electricidad', 'electricidad'],
                  ['Motor', 'motor'],
                  ['Transmisi칩n', 'transmision'],
                  ['Frenos', 'frenos'],
                  ['Suspensi칩n', 'suspension'],
                  ['Carrocer칤a', 'carroceria'],
                  ['Neum치ticos', 'neumaticos'],
                  ['Diagn칩stico', 'diagnostico'],
                  ['Otros', 'otros']
                ], @servicio.categoria),
                { prompt: "Selecciona una categor칤a" },
                { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" } %>
          </div>

          <!-- Fecha Agendada -->
          <div>
            <%= form.label :fecha_agendada, "Fecha y Hora Agendada", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.datetime_local_field :fecha_agendada,
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm",
                min: Date.current.strftime("%Y-%m-%dT%H:%M") %>
            <p class="mt-1 text-xs text-gray-500">Fecha y hora programada para realizar el servicio</p>
          </div>

          <!-- Estado activo -->
          <div>
            <div class="flex items-center">
              <%= form.check_box :activo, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
              <%= form.label :activo, "Servicio activo", class: "ml-2 block text-sm text-gray-900" %>
            </div>
            <p class="mt-1 text-xs text-gray-500">Los servicios inactivos no aparecer치n en las opciones de facturaci칩n</p>
          </div>

          <!-- Botones de acci칩n -->
          <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
            <%= link_to "Cancelar", @servicio.persisted? ? servicio_path(@servicio) : servicios_path, 
                class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-lg transition duration-200" %>
            <%= form.submit @servicio.persisted? ? "Actualizar Servicio" : "Crear Servicio", 
                class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  // Filtrar veh칤culos por cliente seleccionado
  document.addEventListener('DOMContentLoaded', function() {
    const clienteSelect = document.getElementById('cliente_select');
    const vehiculoSelect = document.getElementById('vehiculo_select');
    const categoriaSelect = document.getElementById('servicio_categoria');
    const duracionInput = document.getElementById('servicio_duracion_estimada');
    
    // Almacenar todas las opciones de veh칤culos
    const allVehiculoOptions = Array.from(vehiculoSelect.options);
    
    if (clienteSelect && vehiculoSelect) {
      clienteSelect.addEventListener('change', function() {
        const selectedClienteId = this.value;
        
        // Limpiar opciones actuales excepto el prompt
        vehiculoSelect.innerHTML = '<option value="">Selecciona un veh칤culo</option>';
        
        if (selectedClienteId) {
          // Filtrar veh칤culos del cliente seleccionado
          // Nota: Necesitaremos pasar los datos del servidor para hacer esto funcional
          // Por ahora mantenemos todas las opciones
          allVehiculoOptions.forEach(option => {
            if (option.value !== '') {
              vehiculoSelect.appendChild(option.cloneNode(true));
            }
          });
        }
      });
    }
    
    // Calcular duraci칩n autom치ticamente basada en la categor칤a
    if (categoriaSelect && duracionInput && !duracionInput.value) {
      categoriaSelect.addEventListener('change', function() {
        const duracionesSugeridas = {
          'mantenimiento_preventivo': 120,
          'mantenimiento_correctivo': 180,
          'electricidad': 90,
          'motor': 240,
          'transmision': 180,
          'frenos': 60,
          'suspension': 120,
          'carroceria': 300,
          'neumaticos': 30,
          'diagnostico': 45,
          'otros': 60
        };
        
        const duracionSugerida = duracionesSugeridas[this.value];
        if (duracionSugerida && !duracionInput.value) {
          duracionInput.value = duracionSugerida;
        }
      });
    }

    // Filtrar veh칤culos por cliente seleccionado
    const clienteSelect = document.getElementById('cliente_select');
    const vehiculoSelect = document.getElementById('vehiculo_select');
    
    if (clienteSelect && vehiculoSelect) {
      // Guardar todas las opciones de veh칤culos
      const todasLasOpciones = Array.from(vehiculoSelect.options);
      
      clienteSelect.addEventListener('change', function() {
        const clienteSeleccionado = this.value;
        
        // Limpiar el select de veh칤culos
        vehiculoSelect.innerHTML = '';
        
        // Agregar opci칩n por defecto
        const opcionDefault = document.createElement('option');
        opcionDefault.value = '';
        opcionDefault.textContent = clienteSeleccionado ? 'Selecciona un veh칤culo' : 'Primero selecciona un cliente';
        vehiculoSelect.appendChild(opcionDefault);
        
        if (clienteSeleccionado) {
          // Filtrar y agregar solo los veh칤culos del cliente seleccionado
          todasLasOpciones.forEach(opcion => {
            if (opcion.value && opcion.dataset.clienteId === clienteSeleccionado) {
              const nuevaOpcion = opcion.cloneNode(true);
              vehiculoSelect.appendChild(nuevaOpcion);
            }
          });
        }
      });
      
      // Inicializar filtrado si ya hay un cliente seleccionado
      if (clienteSelect.value) {
        clienteSelect.dispatchEvent(new Event('change'));
      }
    }
  });
</script>
