<div class="min-h-screen bg-gray-100 py-8">
  <div class="max-w-4xl mx-auto px-4">
    <!-- Breadcrumb -->
    <nav class="flex mb-4" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1">
        <li class="inline-flex items-center">
          <%= link_to users_path, class: "text-gray-700 hover:text-blue-600" do %>
            Usuarios
          <% end %>
        </li>
        <li>
          <div class="flex items-center">
            <span class="mx-2 text-gray-400">/</span>
            <%= link_to user_path(@user), class: "text-gray-700 hover:text-blue-600" do %>
              <%= @user.nombre_completo %>
            <% end %>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <span class="mx-2 text-gray-400">/</span>
            <span class="text-gray-500">Editar</span>
          </div>
        </li>
      </ol>
    </nav>

    <div class="bg-white shadow rounded-lg">
      <!-- Header -->
      <div class="px-6 py-4 border-b border-gray-200">
        <h1 class="text-2xl font-bold text-gray-900">
          Editar Usuario: <%= @user.nombre_completo %>
        </h1>
        <p class="mt-1 text-sm text-gray-600">
          Actualiza la informaci√≥n del usuario del sistema.
        </p>
      </div>

      <!-- Form -->
      <div class="px-6 py-6">
        <%= render 'form', user: @user %>
      </div>
    </div>
  </div>
</div>
