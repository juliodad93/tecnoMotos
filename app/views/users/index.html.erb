<div class="min-h-screen bg-gray-100 py-8">
  <div class="max-w-7xl mx-auto px-4">
    <div class="bg-white shadow rounded-lg">
      <!-- Header -->
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h1 class="text-2xl font-bold text-gray-900">Usuarios del Sistema</h1>
          <%= link_to "Nuevo Usuario", new_user_path, 
              class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200" %>
        </div>
      </div>

      <!-- Users Table -->
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Usuario</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cargo</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Identificación</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @users.each do |user| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <div class="h-10 w-10 rounded-full bg-blue-600 flex items-center justify-center">
                        <span class="text-white font-medium text-sm">
                          <%= user.nombre.first %><%= user.apellido.first %>
                        </span>
                      </div>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">
                        <%= user.nombre_completo %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= user.email_address %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= cargo_color(user.cargo) %>">
                    <%= cargo_icon(user.cargo) %> <%= user.cargo_humanizado %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= user.identificacion %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex items-center justify-end space-x-2">
                    <%= link_to "Ver", user_path(user), 
                        class: "text-blue-600 hover:text-blue-900 bg-blue-50 hover:bg-blue-100 px-3 py-1 rounded-md transition duration-200" %>
                    <%= link_to "Editar", edit_user_path(user), 
                        class: "text-yellow-600 hover:text-yellow-900 bg-yellow-50 hover:bg-yellow-100 px-3 py-1 rounded-md transition duration-200" %>
                    <%= link_to "Eliminar", user_path(user), 
                        method: :delete,
                        data: { 
                          confirm: "¿Estás seguro de que quieres eliminar este usuario?" 
                        },
                        class: "text-red-600 hover:text-red-900 bg-red-50 hover:bg-red-100 px-3 py-1 rounded-md transition duration-200" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <% if @users.empty? %>
          <div class="text-center py-12">
            <div class="text-gray-500">
              <h3 class="text-lg font-medium mb-2">No hay usuarios registrados</h3>
              <p class="mb-4">Comienza agregando el primer usuario</p>
              <%= link_to "Agregar Usuario", new_user_path, 
                  class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200" %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Summary by Cargo -->
      <div class="border-t border-gray-200 bg-gray-50 px-6 py-4">
        <div class="grid grid-cols-4 gap-4">
          <div class="text-center">
            <div class="text-2xl font-bold text-purple-600"><%= User.administradores.count %></div>
            <div class="text-sm text-gray-500">Administradores</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-blue-600"><%= User.tecnicos.count %></div>
            <div class="text-sm text-gray-500">Técnicos</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-green-600"><%= User.comerciales.count %></div>
            <div class="text-sm text-gray-500">Comerciales</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-orange-600"><%= User.administrativos.count %></div>
            <div class="text-sm text-gray-500">Administrativos</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
