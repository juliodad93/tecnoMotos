<div class="space-y-6">
  <%= form_with model: [@cliente, vehiculo].compact, local: true, class: "space-y-6" do |form| %>
    <% if vehiculo.errors.any? %>
      <div class="rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              Hay <%= pluralize(vehiculo.errors.count, "error") %> que impide<%= "n" if vehiculo.errors.count != 1 %> guardar este vehículo:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc list-inside space-y-1">
                <% vehiculo.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-2 gap-6">
      <!-- Información del Vehículo -->
      <div class="space-y-4">
        <h3 class="text-lg font-medium text-gray-900">Información del Vehículo</h3>
        
        <div>
          <%= form.label :marca, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :marca, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "Ej: Toyota, Honda, Yamaha" %>
        </div>

        <div>
          <%= form.label :modelo, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :modelo, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "Ej: Corolla, CBR, FZ" %>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= form.label :anio, "Año", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.number_field :anio, 
                min: 1900, max: Date.current.year + 1,
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: Date.current.year %>
          </div>

          <div>
            <%= form.label :color, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_field :color, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: "Ej: Rojo, Azul, Negro" %>
          </div>
        </div>

        <div>
          <%= form.label :matricula, "Matrícula/Placa", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :matricula, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "Ej: ABC123, XYZ789" %>
        </div>
      </div>

      <!-- Propietario y Observaciones -->
      <div class="space-y-4">
        <h3 class="text-lg font-medium text-gray-900">Propietario</h3>
        
        <% if @cliente.present? %>
          <!-- Cliente predefinido -->
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <div class="flex items-center">
              <div class="flex-shrink-0 h-10 w-10">
                <div class="h-10 w-10 rounded-full bg-blue-600 flex items-center justify-center">
                  <span class="text-white font-medium text-sm">
                    <%= @cliente.nombre.first %><%= @cliente.apellido.first %>
                  </span>
                </div>
              </div>
              <div class="ml-4">
                <div class="text-sm font-medium text-gray-900">
                  <%= @cliente.nombre %> <%= @cliente.apellido %>
                </div>
                <div class="text-sm text-gray-500">
                  ID: <%= @cliente.identificacion %>
                </div>
              </div>
            </div>
          </div>
          <%= form.hidden_field :cliente_id, value: @cliente.id %>
        <% else %>
          <!-- Selector de cliente -->
          <div>
            <%= form.label :cliente_id, "Seleccionar Cliente", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.collection_select :cliente_id, @clientes, :id, 
                ->(cliente) { "#{cliente.nombre} #{cliente.apellido} (#{cliente.identificacion})" },
                { prompt: "Selecciona un cliente" },
                { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" } %>
          </div>
        <% end %>

        <div>
          <%= form.label :descripcion, "Observaciones", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :descripcion, 
              rows: 4,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "Notas adicionales sobre el vehículo..." %>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-end space-x-3 pt-6 border-t border-gray-200">
      <%= link_to "Cancelar", 
          vehiculo.persisted? ? vehiculo_path(vehiculo) : (@cliente.present? ? cliente_path(@cliente) : vehiculos_path),
          class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" %>
      
      <%= form.submit vehiculo.persisted? ? "Actualizar Vehículo" : "Crear Vehículo",
          class: "px-4 py-2 bg-blue-600 border border-transparent rounded-md text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" %>
    </div>
  <% end %>
</div>
