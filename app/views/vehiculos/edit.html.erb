<div class="min-h-screen bg-gray-100 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="flex mb-4" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
          <%= link_to clientes_path, class: "text-gray-700 hover:text-blue-600" do %>
            Clientes
          <% end %>
        </li>
        <li>
          <div class="flex items-center">
            <span class="mx-2 text-gray-400">/</span>
            <%= link_to cliente_path(@vehiculo.cliente), class: "text-gray-700 hover:text-blue-600" do %>
              <%= @vehiculo.cliente.nombre %> <%= @vehiculo.cliente.apellido %>
            <% end %>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <span class="mx-2 text-gray-400">/</span>
            <%= link_to vehiculo_path(@vehiculo), class: "text-gray-700 hover:text-blue-600" do %>
              <%= @vehiculo.marca %> <%= @vehiculo.modelo %>
            <% end %>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <span class="mx-2 text-gray-400">/</span>
            <span class="text-gray-500">Editar</span>
          </div>
        </li>
      </ol>
    </nav>

    <div class="bg-white shadow rounded-lg">
      <!-- Header -->
      <div class="px-6 py-4 border-b border-gray-200">
        <h1 class="text-2xl font-bold text-gray-900">
          Editar Vehículo: <%= @vehiculo.marca %> <%= @vehiculo.modelo %>
        </h1>
        <p class="mt-1 text-sm text-gray-600">
          Actualiza la información del vehículo.
        </p>
      </div>

      <!-- Form -->
      <div class="px-6 py-6">
        <%= render 'form', vehiculo: @vehiculo %>
      </div>
    </div>
  </div>
</div>
