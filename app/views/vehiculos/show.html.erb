<div class="min-h-screen bg-gray-100 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="flex mb-4" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
          <%= link_to clientes_path, class: "text-gray-700 hover:text-blue-600" do %>
            Clientes
          <% end %>
        </li>
        <li>
          <div class="flex items-center">
            <span class="mx-2 text-gray-400">/</span>
            <%= link_to cliente_path(@vehiculo.cliente), class: "text-gray-700 hover:text-blue-600" do %>
              <%= @vehiculo.cliente.nombre %> <%= @vehiculo.cliente.apellido %>
            <% end %>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <span class="mx-2 text-gray-400">/</span>
            <span class="text-gray-500"><%= @vehiculo.marca %> <%= @vehiculo.modelo %></span>
          </div>
        </li>
      </ol>
    </nav>

    <div class="bg-white shadow rounded-lg">
      <!-- Header -->
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <div class="flex-shrink-0 h-12 w-12 mr-4">
              <div class="h-12 w-12 rounded-lg bg-blue-600 flex items-center justify-center">
                <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                </svg>
              </div>
            </div>
            <div>
              <h1 class="text-2xl font-bold text-gray-900">
                <%= @vehiculo.marca %> <%= @vehiculo.modelo %>
              </h1>
              <p class="text-gray-500">Matrícula: <%= @vehiculo.matricula %></p>
            </div>
          </div>
          <div class="flex space-x-2">
            <%= link_to "Editar", edit_vehiculo_path(@vehiculo), 
                class: "bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded-lg transition duration-200" %>
            <%= link_to "Eliminar", vehiculo_path(@vehiculo), 
                method: :delete,
                data: { confirm: "¿Estás seguro?" },
                class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded-lg transition duration-200" %>
          </div>
        </div>
      </div>

      <!-- Vehicle Info -->
      <div class="px-6 py-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-lg font-medium text-gray-900 mb-4">Información del Vehículo</h3>
            <dl class="space-y-3">
              <div>
                <dt class="text-sm font-medium text-gray-500">Marca</dt>
                <dd class="text-sm text-gray-900"><%= @vehiculo.marca %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Modelo</dt>
                <dd class="text-sm text-gray-900"><%= @vehiculo.modelo %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Año</dt>
                <dd class="text-sm text-gray-900"><%= @vehiculo.anio %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Matrícula</dt>
                <dd class="text-sm text-gray-900"><%= @vehiculo.matricula %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Color</dt>
                <dd class="text-sm text-gray-900">
                  <%= @vehiculo.color.present? ? @vehiculo.color : "No especificado" %>
                </dd>
              </div>
            </dl>
          </div>
          
          <div>
            <h3 class="text-lg font-medium text-gray-900 mb-4">Propietario</h3>
            <div class="border border-gray-200 rounded-lg p-4">
              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10">
                  <div class="h-10 w-10 rounded-full bg-blue-600 flex items-center justify-center">
                    <span class="text-white font-medium text-sm">
                      <%= @vehiculo.cliente.nombre.first %><%= @vehiculo.cliente.apellido.first %>
                    </span>
                  </div>
                </div>
                <div class="ml-4">
                  <div class="text-sm font-medium text-gray-900">
                    <%= link_to cliente_path(@vehiculo.cliente), class: "text-blue-600 hover:text-blue-900" do %>
                      <%= @vehiculo.cliente.nombre %> <%= @vehiculo.cliente.apellido %>
                    <% end %>
                  </div>
                  <div class="text-sm text-gray-500">
                    ID: <%= @vehiculo.cliente.identificacion %>
                  </div>
                  <% if @vehiculo.cliente.telefono.present? %>
                    <div class="text-sm text-gray-500">
                      Tel: <%= @vehiculo.cliente.telefono %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <% if @vehiculo.descripcion.present? %>
          <div class="mt-6">
            <h3 class="text-lg font-medium text-gray-900 mb-2">Observaciones</h3>
            <div class="bg-gray-50 rounded-lg p-4">
              <p class="text-sm text-gray-700"><%= @vehiculo.descripcion %></p>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Services History Section (placeholder for future) -->
      <div class="border-t border-gray-200">
        <div class="px-6 py-4">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Historial de Servicios</h3>
          <div class="text-center py-8">
            <p class="text-gray-500">No hay servicios registrados para este vehículo</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
